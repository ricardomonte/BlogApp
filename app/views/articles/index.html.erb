<h1>Articles listing page</h1>
<table>
  <thead>
    <th >Title</th>
    <th>Description</th>
    <th colspan= "3">Actions</th>
    <th>Created by</th>

  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Show", article_path(article[:id]) %></td>
        <td><%= link_to "Edit", edit_article_path(article[:id]) %></td>
        <td><%= link_to "Delete", article_path(article[:id]), method: :delete, data: {confirm: 'Are you sure you wanna delete?'} %></td>
        <td><%= article.user.username %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br/>

<%= button_to "New Post", { :action => "new" }, :method => :get %>
  